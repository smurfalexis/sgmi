

      <!-- MODAL: Most Popular Today see more starts here -->
        <div class="modal fade" id="exampleModalToggle" tabindex="-1">
        <div class="modal-dialog modal-dialog-scrollable" data-controller="search-collections">
          <div class="modal-content-drop modal-search">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Search for an NFT collection!</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body modal-drop" data-search-collections-target="collection">
              <!-- Iteration -->
                    <div class="search-bar-small">
            <div>
              <%= form_with url: collections_path, method: :get, html: { class:
              'mb-4', data: { search_collections_target: 'form' } } do |f| %>
              <%= f.text_field :query,
              class: "form-control watchlist-form",
              placeholder: 'Search for a collection',
              value: params[:query],
              data: { search_collections_target: 'input',
              action: 'keyup->search-collections#update',
              # action: 'ajax:beforeSend->search-collections#submission'
                } %>
            <% end %>
          </div>
            </div>
