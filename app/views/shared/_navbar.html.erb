<!-- Profile page-->
<% elsif current_page?('/profile') %>
  <header>
    <div class="navbar">
      <div class="container">
        <div class="navbar-content">
            <div class="d-flex justify-content-center align-items-center">
            <%= image_tag "SGMI-LOGO.png", size: "100x100" %>  
            <%= link_to "SGMI", root_path, class:"logo", style:"text-decoration: none" %>
            </div>
            <div class="search-bar">
              <%= simple_form_for :search, url: collections_path, method: "GET", html: { class: 'form-inline' } do |f| %>
