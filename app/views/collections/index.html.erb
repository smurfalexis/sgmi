<div class="container">
  <div class="container-collection-card">
    <% @collections.each do |collection| %>

      <div class="col-sm-6 col-md-6 col-lg-4 ">
        <div class="collection-card">
          <div class="collection-info">
            <div class="collection-card-info">
              <p class="card-title"> <%= link_to "#{collection.name}", collection_path(collection), class: "card-title text-black" %></p>
              <p class="card-price"> <%= collection.floor_price %></p>
              <p class="card-volume"> <%= collection.volume %></p>
              <p class="card-listings"> <%= collection.listings %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
